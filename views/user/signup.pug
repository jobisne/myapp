doctype html
html(lang="en")
    include ../common/head.pug
    +head("Signup to Starter MVP")
    body
        header
            include ../common/navbar
            +navbar()
            .container
                .row
                    .col-sm-12.offset-md-2.col-md-8
                        .jumbotron
                            h2.text-center Sign Up
                            .row
                                .col-sm-12.col-md-12
                                    form(action='/signup', method='POST')
                                        div.formgroup
                                            label.small.mb-1.mt-3 Email:
                                            input(type="email", name='email', value=formData.email, placeholder='Please enter your email', require=true).form-control
                                            if (errors && errors.email)
                                                p.small.text-danger #{errors.email} 
                                            label.small.mb-1.mt-3 Password:
                                            input(type="password", name='password', value='', placeholder='New Password', require=true).form-control
                                            if(errors && errors.password)
                                                p.small.text-danger #{errors.password}
                                            button.mt-3.btn.btn-primary(type="submit") Sign Up
                                            p.mt-2.mb-0
                                                | Already have an account? #[a(href="/login") Log in here].
                                                
        include ../common/footer.pug
        +footer                                            
